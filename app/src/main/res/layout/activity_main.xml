                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q3_ans1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_option1" />

                <RadioButton
                    android:id="@+id/q3_ans2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_option2" />

                <RadioButton
                    android:id="@+id/q3_ans3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_option3"/>

                <RadioButton
                    android:id="@+id/q3_ans4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/q3_option4"/>
            </RadioGroup>

            <!--Question 4-->
            <TextView
                android:layout_width="match_parent"
