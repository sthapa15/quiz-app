                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/q9_option7" />

            <!-- Question 10 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_10" />

            <EditText
                android:id="@+id/q10_ans"
                android:layout_width="match_parent"
